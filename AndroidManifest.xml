<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jacobobryant.scripturemastery"
    android:versionCode="12"
    android:versionName="0.6" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:name="SMApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/title_activity_main"
        android:allowBackup="true" >
        <activity android:name="MainActivity" >
            <intent-filter android:label="@string/app_name" >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ScriptureActivity" />
        <activity
            android:name="NewPassageActivity"
            android:label="@string/newPassageLabel"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="KeywordActivity"
            android:label="@string/keywordLabel" />
        <activity android:name="SettingsActivity" />
        <activity android:name="org.acra.CrashReportDialog"
            android:theme="@android:style/Theme.Dialog"
            android:launchMode="singleInstance"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true" />
        <activity android:name="ScriptureListActivity" />
    </application>

</manifest>
